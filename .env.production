# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database (Railway provides these)
DATABASE_URL=${{PostgreSQL.DATABASE_URL}}

# Redis (Railway provides these)
REDIS_URL=${{Redis.REDIS_URL}}
REDIS_HOST=${{Redis.REDIS_HOST}}
REDIS_PORT=${{Redis.REDIS_PORT}}
REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}

# AI Providers
OPENAI_API_KEY=${{OPENAI_API_KEY}}
OPENROUTER_API_KEY=${{OPENROUTER_API_KEY}}

# Video Configuration
VIDEO_ENGINE_PRIORITY=veo,cosmos,nemotron-nano,svd,cogvideox
MAX_VIDEO_DURATION=60
VIDEO_QUALITY=high

# Queue Configuration
QUEUE_NAME=video-generation
QUEUE_CONCURRENCY=3
QUEUE_LIMITER_MAX=10
QUEUE_LIMITER_DURATION=1000

# Security
JWT_SECRET=${{JWT_SECRET}}
CORS_ORIGIN=https://yourdomain.com,https://*.railway.app
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Storage (Railway Volumes or external)
UPLOAD_PATH=/data/videos
MAX_UPLOAD_SIZE=104857600  # 100MB

# Monitoring
SENTRY_DSN=${{SENTRY_DSN}}
LOG_LEVEL=info
ENABLE_METRICS=true

# Feature Flags
ENABLE_QUEUE=true
ENABLE_CACHE=true
ENABLE_ANALYTICS=true
