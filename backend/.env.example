# Database
DATABASE_URL=postgresql://user:password@localhost:5432/viral_videos

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# API Keys
NEWS_API_KEY=your_newsapi_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Video Generation
LUMA_API_KEY=your_luma_api_key_here
RUNWAY_API_KEY=your_runway_api_key_here
MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# YouTube OAuth
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# TikTok API
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# Discord Notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# AWS S3 Storage
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Scheduler Settings
ENABLE_AUTO_GENERATION=false
REQUIRE_MANUAL_APPROVAL=true
GENERATION_INTERVAL_HOURS=1
VIDEO_ENGINE_PRIORITY=placeholder
REFINE_VIDEO_PROMPTS=true
# Video Engine API URLs
LUMA_URL=http://localhost:8000
RUNWAY_URL=http://localhost:8001
COGVIDEOX_URL=http://localhost:8002
SVD_URL=http://localhost:8003
HUNYUAN_URL=http://localhost:8004

# Hugging Face Serverless Inference (free tier)
HF_API_TOKEN=your_hf_token
HF_MODEL_ID=username/model-name

# HunyuanVideo (PokeLoRA) - Local GPU
# Used by scripts/local-runner.ts
HUNYUAN_GENERATE_SCRIPT=generate.py
HUNYUAN_MODEL_PATH=/path/to/hunyuanvideo_pipeline
POKELORA_PATH=PokeLoRA.safetensors
PYTHON_PATH=python
HUNYUAN_REF_IMAGE_PATH=ref.jpg
OUTPUT_DIR=outputs
RUN_LOCAL_ENGINES=false
# End of env
