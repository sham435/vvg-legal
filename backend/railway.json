{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "context": ".",
    "buildEnvironment": "V3"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "cronSchedule": "0 * * * *",
    "startCommand": "npm run start:prod",
    "sleepApplication": false,
    "restartPolicyType": "NEVER"
  }
}
