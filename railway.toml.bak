# Railway Configuration
# This file configures the Railway deployment for the entire project

[build]
builder = "DOCKERFILE"
dockerfilePath = "backend/Dockerfile"

[deploy]
startCommand = "npm run start:prod"
healthcheckPath = "/health"
healthcheckTimeout = 10
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 3

# Service configuration for backend
[services.backend]
builder = "DOCKERFILE"
dockerfilePath = "backend/Dockerfile"
source = "backend"

# Required environment variables (set these in Railway dashboard)
# - DATABASE_URL (Railway Postgres)
# - REDIS_URL (Railway Redis)
# - JWT_SECRET
# - NEWS_API_KEY
# - OPENAI_API_KEY
# - etc.

# Note: This file is for reference. Railway primarily uses backend/railway.json
# and environment variables set in the Railway dashboard.
