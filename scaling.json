{
  "scaling": {
    "min": 1,
    "max": 3,
    "target_cpu": 70,
    "target_memory": 80,
    "cooldown": 300
  },
  "autoscaling_triggers": [
    {
      "metric": "cpu",
      "threshold": 70,
      "duration": 60
    },
    {
      "metric": "memory",
      "threshold": 80,
      "duration": 60
    },
    {
      "metric": "request_rate",
      "threshold": 100,
      "duration": 120
    }
  ]
}
